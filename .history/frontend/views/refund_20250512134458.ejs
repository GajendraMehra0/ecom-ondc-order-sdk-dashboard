<!DOCTYPE html>
<html>
<head>
  <title>Refund Calculation</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 40px;
      background: linear-gradient(to right, #e0f7fa, #fce4ec);
      color: #333;
    }

    h1 {
      text-align: center;
      color: #6a1b9a;
      margin-bottom: 30px;
    }

    form {
      max-width: 800px;
      margin: auto;
      background: #ffffff;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      border-left: 10px solid #6a1b9a;
    }

    label {
      display: block;
      margin-top: 20px;
      font-weight: bold;
      color: #00695c;
    }

    input, select, textarea, button {
      width: 100%;
      padding: 12px;
      margin-top: 8px;
      border-radius: 6px;
      border: 1px solid #bdbdbd;
      font-size: 14px;
      background-color: #f9f9f9;
      transition: all 0.3s ease;
    }

    input:focus, select:focus, textarea:focus {
      outline: none;
      border-color: #6a1b9a;
      background-color: #fff3e0;
    }

    button {
      background-color: #00897b;
      color: white;
      border: none;
      cursor: pointer;
      margin-top: 30px;
      font-size: 16px;
      font-weight: bold;
    }

    button:hover {
      background-color: #004d40;
    }

    .result {
      max-width: 800px;
      margin: 30px auto;
      padding: 20px;
      background-color: #e8f5e9;
      border-left: 6px solid #43a047;
      border-radius: 8px;
      color: #2e7d32;
    }

    .result h2 {
      margin: 0;
    }

    .error {
      max-width: 800px;
      margin: 30px auto;
      padding: 20px;
      background-color: #ffebee;
      border-left: 6px solid #e53935;
      border-radius: 8px;
      color: #c62828;
    }

    .error h3 {
      margin: 0;
    }
  </style>
</head>
<body>
  <h1>Check your refund Amount</h1>
  <form id="refundForm">
    <label>Actor:
      <select name="actor" required>
        <option value="">-- Select Actor --</option>
        <option value="Buyer">Buyer</option>
        <option value="Seller">Seller</option>
      </select>
    </label>

    <label>Action Type:
      <select name="actionType" required>
        <option value="">-- Select Action Type --</option>
        <option value="full">Full</option>
        <option value="partial">Partial</option>
      </select>
    </label>

    <label>Action:
      <select name="action" required>
        <option value="">-- Select Action --</option>
        <option value="return">Return</option>
        <option value="cancellation">Cancellation</option>
      </select>
    </label>

    <label>Is ETA Breached:
      <select name="isETABreached" required>
        <option value="true">True</option>
        <option value="false">False</option>
      </select>
    </label>

    <label>Charge Payload (JSON):
      <textarea name="charge" rows="10" required></textarea>
    </label>

    <label>on_cancelPayload (JSON):
      <textarea name="on_cancelPayload" rows="10" required></textarea>
    </label>

    <button type="submit">Calculate Refund</button>
  </form>

  <% if (typeof refundResult !== 'undefined') { %>
    <div class="result">
      <h2>Refund Amount: â‚¹<%= refundResult %></h2>
    </div>
  <% } %>

  <% if (typeof error !== 'undefined') { %>
    <div class="error">
      <h3>Error: <%= error %></h3>
    </div>
  <% } %>

  <script>
    document.getElementById("refundForm").addEventListener("submit", function(e) {
      e.preventDefault();

      const form = e.target;
      const formData = new FormData(form);
      const actor = formData.get("actor");
      const action = formData.get("action");
      const actionType = formData.get("actionType");
      const isETABreached = formData.get("isETABreached") === "true";

      // Simple mock refund calculation
      let refundAmount = 0;
      if (action === "cancellation" && actor === "Buyer") {
        refundAmount = isETABreached ? 200 : 100;
      } else if (action === "return") {
        refundAmount = 150;
      } else {
        refundAmount = 50;
      }

      alert("ðŸ’¸ Refund Amount: â‚¹" + refundAmount);

      // Optionally send to server if needed
      // form.submit();
    });
  </script>
</body>
</html>
