<!DOCTYPE html>
<html>
<head>
  <title>Refund Calculation</title>
  <style>
    /* [Same styles as you provided] */
  </style>
</head>
<body>
  <h1>Check your refund Amount</h1>
  <form id="refundForm" action="/refund" method="POST">
    <!-- All your fields remain the same -->
    <label>Actor:
      <select name="actor" required>
        <option value="">-- Select Actor --</option>
        <option value="Buyer">Buyer</option>
        <option value="Seller">Seller</option>
      </select>
    </label>

    <label>Action Type:
      <select name="actionType" required>
        <option value="">-- Select Action Type --</option>
        <option value="full">Full</option>
        <option value="partial">Partial</option>
      </select>
    </label>

    <label>Action:
      <select name="action" required>
        <option value="">-- Select Action --</option>
        <option value="return">Return</option>
        <option value="cancellation">Cancellation</option>
      </select>
    </label>

    <label>Is ETA Breached:
      <select name="isETABreached" required>
        <option value="true">True</option>
        <option value="false">False</option>
      </select>
    </label>

    <label>Charge Payload (JSON):
      <textarea name="charge" rows="10" required></textarea>
    </label>

    <label>on_cancelPayload (JSON):
      <textarea name="on_cancelPayload" rows="10" required></textarea>
    </label>

    <button type="submit">Calculate Refund</button>
  </form>

  <% if (typeof refundResult !== 'undefined') { %>
    <div class="result">
      <h2>Refund Amount: â‚¹<%= refundResult %></h2>
    </div>
  <% } %>

  <% if (typeof error !== 'undefined') { %>
    <div class="error">
      <h3>Error: <%= error %></h3>
    </div>
  <% } %>

  <script>
    // Optional: validate JSON before sending
    document.getElementById("refundForm").addEventListener("submit", function (e) {
      const charge = document.querySelector("textarea[name='charge']").value;
      const cancel = document.querySelector("textarea[name='on_cancelPayload']").value;

      try {
        JSON.parse(charge);
        JSON.parse(cancel);
      } catch (err) {
        e.preventDefault();
        alert("ðŸš« One or both JSON payloads are invalid. Please check and try again.");
      }
    });
  </script>
</body>
</html>
