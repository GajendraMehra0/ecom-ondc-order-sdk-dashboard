<!DOCTYPE html>
<html>
<head>
  <title>Refund Calculation</title>
</head>
<body>
  <h1>Refund Calculator</h1>
  <form action="/refund" method="POST">
    <label>Actor:
      <input type="text" name="actor" required />
    </label><br><br>

    <label>Action Type:
      <input type="text" name="actionType" required />
    </label><br><br>

    <label>Action:
      <input type="text" name="action" required />
    </label><br><br>

    <label>Is ETA Breached:
      <select name="isETABreached" required>
        <option value="true">True</option>
        <option value="false">False</option>
      </select>
    </label><br><br>

    <label>Charge Payload (JSON):
      <textarea name="charge" rows="10" cols="60" required></textarea>
    </label><br><br>

    <label>on_cancelPayload (JSON):
      <textarea name="on_cancelPayload" rows="10" cols="60" required></textarea>
    </label><br><br>

    <button type="submit">Calculate Refund</button>
  </form>

  <% if (typeof refundResult !== 'undefined') { %>
    <h2>Refund Amount: <%= refundResult %></h2>
  <% } %>

  <% if (typeof error !== 'undefined') { %>
    <h3 style="color:red;">Error: <%= error %></h3>
  <% } %>
</body>
</html>
